---

import Header from '@/sections/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="imgs/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>

	<Header/>	
		<slot />
	</body>
</html>

<style is:global>
	:root{
	/*los colores que el navegador tiene que entender que vamos a manejar */	
/*el navegador y ale cambia los colores por defecto */
		
	}
	
	html {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

		scroll-behavior: smooth; /*este hace que se baje el scrol un poco lento, no de golpe */
	}

	
	
</style>
